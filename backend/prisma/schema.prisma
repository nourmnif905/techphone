generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  photo       String   // ðŸ”¥ lien de lâ€™image ou nom de fichier
  index       Int      @unique // auto-incrÃ©ment manuel
  createdAt   DateTime @default(now())
}
